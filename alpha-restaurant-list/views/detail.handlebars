<div class="d-flex flex-column justify-content-center flex-lg-row align-items-center">
    <img class="rounded w-100 ml-5" src="{{restaurant.image}}" style="max-width: 600px;">

    <div class="d-flex flex-column justify-content-center p-5 w-50">
            <h1 class="mb-2">{{restaurant.name}}</h1>
            <p class="mb-1">
                <i class="fas fa-utensils pr-2"></i>
                類別： {{restaurant.category}}
            </p>
            <p class="mb-1">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址： {{restaurant.location}}
                <a href="{{restaurant.map}}" class="text-secondary" target="_blank">
                    <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                </a>
            </p>
            <p class="mb-1">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話： {{restaurant.phone}}
            </p>
            <p class="mb-5">
                {{restaurant.description}}
            </p>
    </div>
</div>