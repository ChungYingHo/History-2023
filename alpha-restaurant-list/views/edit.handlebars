<div class="container">
    <form action="/" method="POST" class="row">
        <div class="col-12 col-md-6">
            <div class="mb-3">
                <label for="name" class="form-label required">餐廳名稱</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="輸入餐廳名字" required value="{{rest.name}}">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label required">餐廳種類</label>
                <input type="text" class="form-control" id="category" name="category" placeholder="輸入餐廳種類" required value="{{rest.category}}">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label required">餐廳地址</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="輸入餐廳地址" required value="{{rest.location}}">
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label required">餐廳電話</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="輸入餐廳電話" required value="{{rest.phone}}">
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="mb-3">
                <label for="map" class="form-label">Google-map</label>
                <input type="url" class="form-control" id="map" name="map" placeholder="輸入 Google Map 網址" value="{{rest.map}}">
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">評價</label>
                <input type="text" class="form-control" id="rating" name="rating" placeholder="輸入評價數字" value="{{rest.rating}}">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">代表圖片</label>
                <input type="url" class="form-control" id="image" name="image" placeholder="輸入餐廳代表圖片網址" value="{{rest.image}}">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">餐廳特色</label>
                <textarea class="form-control" id="description" name="description" rows="5">{{rest.description}}</textarea>
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
    </form>
</div>