{{!-- carousel --}}
<div id="carouselControls" class="carousel slide mx-auto" data-bs-ride="carousel" style="width: 70%;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselControls" data-bs-slide-to="0" class="active"
            aria-current="true"></button>
        <button type="button" data-bs-target="#carouselControls" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carouselControls" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://plus.unsplash.com/premium_photo-1663852297801-d277b7af6594?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80"
                class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
                <h5>Delicacy</h5>
                <p>紀錄那些值得品嘗的美食</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80"
                class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
                <h5>Life</h5>
                <p>用美食豐富每一天的生活</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1606787366850-de6330128bfc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80"
                class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
                <h5>Share</h5>
                <p>美好的事物值得您的分享</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselControls" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto row">
            <div class="row mx-auto">
                {{#each rest}}
                    <div class="card-container col-md-6 col-lg-4">
                        <a href="/{{this.category}}/{{this._id}}" >
                            <div class="card mb-3">
                                <img src="{{this.image}}" class="card-img-top">
                                <div class="card-body p-3">
                                    <h5 class="card-title">{{this.name}}</h5>
                                    <div class="restaurant-category mb-1">
                                        <i class="fas fa-utensils pr-2"></i> {{this.category}}
                                    </div>
                                    <div class="d-flex flex-column flex-lg-row align-items-center gap-1">
                                        <span class="badge rounded-pill bg-danger font-weight-normal">
                                            {{this.rating}}
                                            <i class="fas fa-star fa-xs"></i>
                                        </span>
                                        <div class="d-flex gap-1">
                                            <a href="/{{this.category}}/{{this._id}}/edit" class="btn btn-primary">Edit</a>
                                            <form action="/{{this.category}}/{{this._id}}?_method=DELETE" method="POST">
                                                <button class="btn btn-secondary">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>